
@model IList<MeuBlog.Models.Post>



        @Html.ActionLink("Novo Post", "Form")
        <table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Conteúdo</th>
            <th>Data de Publicação</th>

        </tr>

    </thead>
            <tbody class="table-hover">
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Titulo</td>
                        <td>@p.Conteudo</td>
                        <td>@p.DataPublicacao</td>
                        <td>
                            @Html.ActionLink("Remover", "Remove", new { id = p.Id })
                        </td>

                        <td>
                            @Html.RouteLink("Editar", "VisualizaPost", new { id = p.Id })
                        </td>
                    </tr>
                }
            </tbody>
</table>


   
