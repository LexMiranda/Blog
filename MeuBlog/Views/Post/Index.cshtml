
@model IList<MeuBlog.Models.Post>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @Html.ActionLink("Novo Post", "Form")
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Conteúdo</th>
                    <th>Data de Publicação</th>
                    
                </tr>

            </thead>
            <tbody>
                @foreach(var p in Model)
                {
                    <tr>
                        <td>@p.Id</td>
                        <td>@p.Titulo</td>
                        <td>@p.Conteudo</td>
                        <td>@p.DataPublicacao</td>
                        <td>
                            @Html.ActionLink("Remover", "Remove", new { id = p.Id })
                        </td>

                        <td>
                            @Html.ActionLink("Editar", "Visualiza", new { id = p.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
