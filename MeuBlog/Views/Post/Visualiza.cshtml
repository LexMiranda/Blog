
@model MeuBlog.Models.Post

        @using (Html.BeginForm("Atualiza", "Post", FormMethod.Post))
        {

            @Html.HiddenFor(p => p.Id)

            @Html.ValidationMessageFor(p => p.Titulo)
            @Html.LabelFor(p => p.Titulo, "Título")
            @Html.TextBoxFor(p => p.Titulo, new {@class="form-control" })

            @Html.ValidationMessageFor(p => p.Conteudo)
            @Html.LabelFor(p => p.Conteudo, "Conteudo")
            @Html.TextAreaFor(p => p.Conteudo, new { @class = "form-control", rows = 10 })

            @Html.ValidationMessageFor(p => p.DataPublicacao)
            @Html.LabelFor(p => p.DataPublicacao, "Data de Publicação")
            @Html.TextBoxFor(p => p.DataPublicacao)

            <div class="checkbox">
                @Html.ValidationMessageFor(p => p.Publicado)
                @Html.LabelFor(p => p.Publicado, "Publicado?")
                @Html.CheckBoxFor(p => p.Publicado)
            </div>  

            <input type="submit" value="Alterar" />
        }
   

@section Scripts{

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}